<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="10dp"
    tools:context=".cadastro">

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNome"
        android:layout_marginTop="12dp"
        android:background="@drawable/roundstyle"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:paddingLeft="16dp"
        android:textColorHint="#0C110F"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        app:srcCompat="@drawable/logo_login" />

    <EditText
        android:id="@+id/txtNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="-23dp"
        android:background="@drawable/roundstyle"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:hint="Nome"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:paddingLeft="16dp"
        android:textColorHint="#0C110F"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmail"
        android:layout_marginTop="12dp"
        android:background="@drawable/roundstyle"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:hint="Senha"
        android:inputType="textPassword"
        android:padding="16dp"
        android:paddingLeft="16dp"
        android:textColorHint="#0C110F"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSenha"
        android:layout_marginTop="28dp"
        android:backgroundTint="#38B56E"
        android:gravity="center"
        android:letterSpacing="0"
        android:padding="16dp"
        android:text="Cadastrar"
        android:textAllCaps="false"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCadastrar"
        android:layout_marginTop="2dp"
        android:backgroundTint="#fff"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:letterSpacing="0"
        android:padding="16dp"
        android:text="Entrar na minha conta"
        android:onClick="voltarParaLogin"
        android:textAllCaps="false"
        android:textColor="#38B56E"
        app:cornerRadius="8dp"
        app:strokeColor="#38B56E"
        app:strokeWidth="1dp" />

</RelativeLayout>