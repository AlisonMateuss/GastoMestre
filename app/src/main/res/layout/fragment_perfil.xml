<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment" >

    <LinearLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/top_background"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_sem_letras"
            android:layout_marginLeft="-25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:text="Meus Dados"
            android:textSize="40dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"/>

    </LinearLayout>

    <EditText
        android:id="@+id/txtNomeMeusDados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/constraintLayout2"
        android:layout_marginTop="100dp"
        android:background="@drawable/roundstyle"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:hint="Nome"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:paddingLeft="16dp"
        android:textColorHint="#0C110F"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/txtEmailMeusDados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNomeMeusDados"
        android:layout_marginTop="14dp"
        android:background="@drawable/roundstyle"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:paddingLeft="16dp"
        android:textColorHint="#0C110F"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/txtSenhaMeusDados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmailMeusDados"
        android:layout_marginTop="14dp"
        android:background="@drawable/roundstyle"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:hint="Senha"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:paddingLeft="16dp"
        android:textColorHint="#0C110F"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/txtConfirmarSenhaMeusDados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSenhaMeusDados"
        android:layout_marginTop="14dp"
        android:background="@drawable/roundstyle"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:hint="Confirmar senha"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:paddingLeft="16dp"
        android:textColorHint="#0C110F"
        android:textSize="14dp" />

    <Button
        android:id="@+id/alterarDados"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtConfirmarSenhaMeusDados"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#fff"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:letterSpacing="0"
        android:onClick="abrirCadastro"
        android:padding="16dp"
        android:text="Alterar dados"
        android:textAllCaps="false"
        android:textColor="#38B56E"
        app:cornerRadius="8dp"
        app:strokeColor="#38B56E"
        app:strokeWidth="1dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-2dp" />
</RelativeLayout>
